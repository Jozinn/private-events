<h3> <%= @event.name %> </h3>
<p> At: <%= @event.date %> </p>
<p> Where: <%= @event.location %> </p>
<p> By: <%= @event.creator %> </p>
<p> About: <%= @event.description %> </p>
<%= link_to "Attend", "/attendence/#{@event.id}", method: "post" %>
<br>
<% @event.attendees.each do |attendee| %>
    <p> <%= attendee.email %> </p>
    <hr>
<% end %>